---
import { type CollectionEntry } from "astro:content";
import LangSelect from "./LangSelect.astro";
import PrevNext from "./PrevNext.astro";
interface Props {
  prevnext: {
    prev?: CollectionEntry<"blog">;
    next?: CollectionEntry<"blog">;
  };
  current: string;
}
const { prevnext, current } = Astro.props;
---

{prevnext ? <PrevNext prevnext={prevnext} /> : <LangSelect current={current} />}
